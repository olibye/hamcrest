<?xml version="1.0" encoding="UTF-8"?>
<package packagerversion="1.4.10" version="2.0"
  xmlns="http://pear.php.net/dtd/package-2.0"
  xmlns:tasks="http://pear.php.net/dtd/tasks-1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://pear.php.net/dtd/tasks-1.0
                      http://pear.php.net/dtd/tasks-1.0.xsd
                      http://pear.php.net/dtd/package-2.0
                      http://pear.php.net/dtd/package-2.0.xsd">
 <name>Hamcrest</name>
 <channel>pear.phpunit.de</channel>
 <summary>A library of matchers for building test expressions.</summary>
 <description>Provides a library of matcher objects (also known as constraints or predicates) allowing 'match' rules to be defined declaratively, to be used in other frameworks. Typical scenarios include testing frameworks, mocking libraries and UI validation rules.</description>
 <lead>
  <name>Sebastian Bergmann</name>
  <user>sb</user>
  <email>sb@sebastian-bergmann.de</email>
  <active>yes</active>
 </lead>
 <date>2008-MM-DD</date>
 <version>
  <release>1.2.0-dev</release>
  <api>1.2.0</api>
 </version>
 <stability>
  <release>devel</release>
  <api>devel</api>
 </stability>
 <license>BSD License</license>
 <notes>http://code.google.com/p/hamcrest/</notes>
 <contents>
  <dir name="/">
   <dir name="Hamcrest">
    <dir name="Matcher">
     <file baseinstalldir="/" name="AllOf.php" role="php" />
     <file baseinstalldir="/" name="AnyOf.php" role="php" />
     <file baseinstalldir="/" name="DescribedAs.php" role="php" />
     <file baseinstalldir="/" name="IsAnything.php" role="php" />
     <file baseinstalldir="/" name="IsCloseTo.php" role="php" />
     <file baseinstalldir="/" name="IsEqualIgnoringCase.php" role="php" />
     <file baseinstalldir="/" name="IsEqualIgnoringWhiteSpace.php" role="php" />
     <file baseinstalldir="/" name="IsEqual.php" role="php" />
     <file baseinstalldir="/" name="IsInstanceOf.php" role="php" />
     <file baseinstalldir="/" name="IsNot.php" role="php" />
     <file baseinstalldir="/" name="IsNull.php" role="php" />
     <file baseinstalldir="/" name="Is.php" role="php" />
     <file baseinstalldir="/" name="IsSame.php" role="php" />
     <file baseinstalldir="/" name="ShortcutCombination.php" role="php" />
     <file baseinstalldir="/" name="StringContains.php" role="php" />
     <file baseinstalldir="/" name="StringEndsWith.php" role="php" />
     <file baseinstalldir="/" name="StringStartsWith.php" role="php" />
     <file baseinstalldir="/" name="SubstringMatcher.php" role="php" />
    </dir>
    <dir name="Tests">
     <file baseinstalldir="/" name="AbstractMatcherTest.php" role="test" />
     <file baseinstalldir="/" name="AllTests.php" role="test" />
     <file baseinstalldir="/" name="BaseMatcherTest.php" role="test" />
     <file baseinstalldir="/" name="MatcherAssertTest.php" role="test" />
     <file baseinstalldir="/" name="TypeSafeMatcherTest.php" role="test" />
    </dir>
    <file baseinstalldir="/" name="BaseDescription.php" role="php" />
    <file baseinstalldir="/" name="BaseMatcher.php" role="php" />
    <file baseinstalldir="/" name="Description.php" role="php" />
    <file baseinstalldir="/" name="Matcher.php" role="php" />
    <file baseinstalldir="/" name="SelfDescribing.php" role="php" />
    <file baseinstalldir="/" name="StringDescription.php" role="php" />
   </dir>
   <file baseinstalldir="/" name="Hamcrest.php" role="php" />
  </dir>
 </contents>
 <dependencies>
  <required>
   <php>
    <min>5.3.0</min>
   </php>
   <pearinstaller>
    <min>1.4.0b1</min>
   </pearinstaller>
   <extension>
    <name>dom</name>
   </extension>
   <extension>
    <name>pcre</name>
   </extension>
   <extension>
    <name>reflection</name>
   </extension>
   <extension>
    <name>spl</name>
   </extension>
  </required>
 </dependencies>
 <phprelease/>
</package>
